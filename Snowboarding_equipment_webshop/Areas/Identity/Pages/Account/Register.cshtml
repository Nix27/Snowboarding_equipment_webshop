@page
@using Utilities.Constants.Role;
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center">
    <div class="col-10 col-md-8 col-lg-4">
        <h2 class="title d-flex justify-content-center align-items-center mt-3 mb-5">Register</h2>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="row">
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="" />
                    <label asp-for="Input.Email">E-mail</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="col-6 form-floating mb-3">
                    <input asp-for="Input.Name" class="form-control" autocomplete="name" aria-required="true" placeholder="" />
                    <label asp-for="Input.Name">Full Name</label>
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div class="col-6 form-floating mb-3">
                    <input asp-for="Input.Phone" class="form-control" autocomplete="phone" aria-required="true" placeholder="" />
                    <label asp-for="Input.Phone">Phone Number</label>
                    <span asp-validation-for="Input.Phone" class="text-danger"></span>
                </div>
                <div class="col-6 form-floating mb-3">
                    <input asp-for="Input.StreetAddress" class="form-control" autocomplete="street-address" aria-required="true" placeholder="" />
                    <label asp-for="Input.StreetAddress">Street Address</label>
                    <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                </div>
                <div class="col-6 form-floating mb-3">
                    <input asp-for="Input.City" class="form-control" autocomplete="city" aria-required="true" placeholder="" />
                    <label asp-for="Input.City">City</label>
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
                <div class="col-6 form-floating mb-3">
                    <input asp-for="Input.PostalCode" class="form-control" autocomplete="postal-code" aria-required="true" placeholder="" />
                    <label asp-for="Input.PostalCode">Postal Code</label>
                    <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                </div>
                <div class="col-6 form-floating mb-3">
                    <select asp-for="Input.CountryId" asp-items="@Model.Input.Countries" class="form-select">
                        <option disabled selected>-- Select Country --</option>
                    </select>
                    <label asp-for="Input.CountryId">Country</label>
                    <span asp-validation-for="Input.CountryId" class="text-danger"></span>
                </div>
                @if (User.IsInRole(AppRoles.ADMIN))
                {
                    <div class="col-6 form-floating mb-3">
                        <select asp-for="Input.Role" asp-items="@Model.Input.Roles" class="form-select">
                            <option disabled selected>-- Select Role --</option>
                        </select>
                        <label asp-for="Input.Role">Role</label>
                    </div>
                }
                <div class="col-6 form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" aria-required="true" placeholder="" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="col-6 form-floating mb-4">
                    <input asp-for="Input.ConfirmPassword" class="form-control" aria-required="true" placeholder="" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 primary-btn">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
