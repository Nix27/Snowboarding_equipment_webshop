@model IEnumerable<ShoppingCartItemVM>

@{
    double totalPrice = (double)ViewData["totalPrice"];
}

<div class="container mt-4">
    <div class="row mb-5">
        <div class="col-6">
            <h2>Shopping Cart</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Products" asp-action="OurProducts" class="primary-btn px-5 py-1">Continue Shopping</a>
        </div>
    </div>
    <div class="row gap-2 px-5 mb-5">
        @foreach (var shoppingCartItem in Model)
        {
            <div class="row align-items-center shopping-cart-item">
                <div class="col-3">
                    @{
                        var image = Url.Action("GetImage", "Image", new { area = "Customer", imageType = ImageType.Thumbnail, id = shoppingCartItem.Product.ThumbnailImageId });
                    }
                    <img src="@image" alt="product image" class="item-image" />
                </div>
                <div class="col-3">
                    <div class="d-flex flex-column">
                        <h5>@shoppingCartItem.Product.Name</h5>

                        @if (shoppingCartItem.Product.Description != null)
                        {
                            <p class="poppins-font-family">
                                @(shoppingCartItem.Product.Description.Length > 50 ?
                                    shoppingCartItem.Product.Description.Substring(0, 50) + "..." :
                                    shoppingCartItem.Product.Description)
                            </p>
                        }
                    </div>
                </div>
                
                <div class="col-2 d-flex justify-content-center">
                    <p>€@shoppingCartItem.Product.Price x @shoppingCartItem.Quantity</p>
                </div>
                
                <div class="col-3">
                    <div class="d-flex gap-2 justify-content-center">
                        <a asp-action="IncrementQuantity" asp-route-shoppingCartId="@shoppingCartItem.Id" class="change-quantity-btn">+</a>
                        <a asp-action="DecrementQuantity" asp-route-shoppingCartId="@shoppingCartItem.Id" class="change-quantity-btn">-</a>
                    </div>
                </div>
                
                <div class="col-1">
                    <a asp-action="DeleteShoppingCartItem" asp-route-shoppingCartItemId="@shoppingCartItem.Id" class="delete-item"><i class="bi bi-trash-fill text-danger"></i></a>
                </div>
            </div>
        }
    </div>
    <div class="d-flex flex-column align-items-center">
        <div class="w-25 d-flex justify-content-between mb-4">
            <span>Total(EUR)</span>
            <span>€@totalPrice</span>
        </div>
        <a asp-controller="" asp-action="" class="primary-btn px-5 py-1">Summary</a>
    </div>
</div>