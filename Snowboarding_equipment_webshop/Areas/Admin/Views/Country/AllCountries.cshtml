@model IEnumerable<CountryVM>

@{
    ViewData["Title"] = "All countries";

    var page = (int)ViewData["page"];
    var size = (int)ViewData["size"];
    var pages = (int)ViewData["pages"] - 1;

    ViewData["action"] = "AllCountries";
}

<input id="hiddenData" data-pages="@pages" data-size="@size" data-url="CountryTableBodyPartial" hidden />

<div class="container p-2">
    <div class="row">
        <div class="col-6 mb-4">
            <h2>All Countries</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="CreateCountry" class="primary-btn py-2 px-5"><i class="bi bi-plus-circle"></i> &nbsp; Add</a>
        </div>
    </div>

    @await Component.InvokeAsync("Search")
    <div class="table-responsive">
        <table id="country-table" class="w-100 table content">
            <partial name="_CountryTableBodyPartial" />
        </table>
    </div>
</div>

@section Scripts{
    <partial name="_NotificationPartial" />
    <script src="~/js/delete-warning.js"></script>
    <script src="~/js/pagination.js" asp-append-version="true"></script>
    <script src="~/js/search.js" asp-append-version="true"></script>
}