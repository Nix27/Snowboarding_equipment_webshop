@model IEnumerable<CountryVM>

@foreach (var country in Model)
{
    <tr>
        <td>@country.Name</td>
        <td class="text-end">
            <div class="w-25 btn-group" role="group">
                <a asp-action="UpdateCountry" asp-route-id="@country.Id" class="primary-btn mx-2 px-5 py-2">
                    <i class="bi bi-pencil"></i>
                </a>
                <a onclick="deleteWarning('/Admin/Country/DeleteCountry/'+@country.Id, ' #country-table')" class="btn btn-danger mx-2">
                    <i class="bi bi-trash3"></i>
                </a>
            </div>
        </td>
    </tr>
}

