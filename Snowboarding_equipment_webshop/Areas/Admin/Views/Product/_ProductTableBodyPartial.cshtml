@using System.Web;
@model IEnumerable<ProductVM>

@foreach (var product in Model)
{
    var thumbnailImage = Url.Action("GetImage", "Image", new { area = "Customer", imageType = ImageType.Thumbnail, id = product.ThumbnailImageId });

    <tr>
        <td>
            <img src="@thumbnailImage" alt="Thumbnail image" class="thumbnail-image" />
        </td>
        <td>@product.Name</td>
        <td>@product.QuantityInStock</td>
        <td>€@product.Price</td>
        <td>@product.Category.Name</td>
        <td class="text-end">
            <div class="btn-group" role="group">
                <a asp-action="UpdateProduct" asp-route-id="@product.Id" class="primary-btn mx-2 px-5 py-2">
                    <i class="bi bi-pencil"></i>
                </a>
                <a onclick="deleteWarning('/Admin/Product/DeleteProduct/'+@product.Id, ' #product-table')" class="btn btn-danger mx-2">
                    <i class="bi bi-trash3"></i>
                </a>
            </div>
        </td>
    </tr>
}