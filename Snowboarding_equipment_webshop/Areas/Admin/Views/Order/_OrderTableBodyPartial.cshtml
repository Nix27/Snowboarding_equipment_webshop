@using System.Web;
@model IEnumerable<OrderVM>

@{
    var page = (int)ViewData["page"];
    var size = (int)ViewData["size"];
    var pages = (int)ViewData["pages"];
    var action = (string)ViewData["action"];
}

<thead>
    <tr class="pb-2">
        <th>Name</th>
        <th>Phone Number</th>
        <th>Order Status</th>
        <th>Payment Status</th>
        <th>Total</th>
        <th></th>
    </tr>
</thead>
<tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Name</td>
            <td>@order.Phone</td>
            <td>@order.OrderStatus</td>
            <td>@order.PaymentStatus</td>
            <td>€@order.TotalPrice</td>
            <td class="text-end">
                <div class="btn-group" role="group">
                    <a asp-action="OrderDetails" asp-route-orderId="@order.Id" class="primary-btn mx-2 px-5 py-2">
                        <i class="bi bi-pencil"></i>
                    </a>
                </div>
            </td>
        </tr>
    }
</tbody>
<tfoot>
    <tr>
        <td colspan="6">
            @await Component.InvokeAsync("Pagination")
        </td>
    </tr>
</tfoot>